<div class="cards">
<% @cocktails.each do |cocktail| %>
  <%= link_to cocktail_path(cocktail), class: "card-btn" do %>
    <div class="card-category" style="background-image:linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1551538827-9c037cb4f32a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=401&q=80)">
        <%= cocktail.name %>
    </div>
  <% end %>
<% end %>
<%= link_to new_cocktail_path, class: "card-btn" do %>
  <div class="card-category" >
     <center><i class="fas fa-plus-circle"></i><br>Add new</center>
  </div>
<% end %>
</div>


</div>
