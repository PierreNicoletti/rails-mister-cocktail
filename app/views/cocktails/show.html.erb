<div class="d-flex justify-content-around">
  <div class="container w-50">
    <div class="d-flex justify-content-between align-items-center">
    <h1><%= @cocktail.name %></h1>
    <%= image_tag "https://images.unsplash.com/photo-1551538827-9c037cb4f32a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=401&q=80", class: "avatar-xlarge", alt: "avatar-bordered" %>
    </div>
    <div class="pl-3 pr-3">
    <h3>Recipe</h3>
    <% @cocktail.doses.each do |dose| %>
    <div class="d-flex justify-content-between">
    <p><%= dose.ingredient.name %> : <%= dose.description %></p>
    <p>
      <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure to delete this ingredient ?" } do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
    </p>
    </div>
    <% end %>
    <br>
    <h3>Add ingredient</h3>
      <%= simple_form_for([@cocktail, @dose]) do |f| %>
        <%= f.association :ingredient %>
        <%= f.input :description %>
        <%= f.submit "Add new ingredient", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
